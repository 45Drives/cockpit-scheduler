[Unit]
Description=Service for {task_name}

[Service]
Type=oneshot
EnvironmentFile={env_path}
ExecStart=python3 /opt/45drives/houston/scheduler/scripts/autosnap-script.py {autoSnapConfig_filesystem_dataset} {autoSnapConfig_recursive_flag} {autoSnapConfig_customName_flag} {autoSnapConfig_customName} --snapsToKeep {autoSnapConfig_snapRetention}
Restart=on-failure
RestartSec=30sec
StartLimitBurst=2
StartLimitInterval=80s

[Install]
WantedBy=multi-user.target