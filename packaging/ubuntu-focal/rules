#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1


# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed


%:
	dh $@

override_dh_auto_install:
	# Load secrets from .env if present (for local builds)
	if [ -f .env ]; then \
		set -a; \
		. .env; \
		set +a; \
	fi; \
	# Load CI-only secrets file if present (from packaging root)
	if [ -f ../cloud-creds.env ]; then \
		set -a; \
		. ../cloud-creds.env; \
		set +a; \
	fi; \
	PKG_DIR=debian/$(DEB_SOURCE); \
	TEMPLATE="$$PKG_DIR/etc/45drives/houston/scheduler/cloud-sync-client-creds-template.json"; \
	OUTPUT="$$PKG_DIR/etc/45drives/houston/scheduler/cloud-sync-client-creds.json"; \
	mkdir -p "$$(dirname $$OUTPUT)"; \
	sed \
	  -e "s|YOUR_GOOGLE_CLIENT_ID|$${GOOGLE_CLIENT_ID}|g" \
	  -e "s|YOUR_GOOGLE_CLIENT_SECRET|$${GOOGLE_CLIENT_SECRET}|g" \
	  -e "s|YOUR_DROPBOX_CLIENT_ID|$${DROPBOX_CLIENT_ID}|g" \
	  -e "s|YOUR_DROPBOX_CLIENT_SECRET|$${DROPBOX_CLIENT_SECRET}|g" \
	  "$$TEMPLATE" > "$$OUTPUT"; \
	chmod 600 "$$OUTPUT"; \
	rm -f "$$TEMPLATE"


# dh_make generated override targets
# This is example for Cmake (See https://bugs.debian.org/641051 )
#override_dh_auto_configure:
